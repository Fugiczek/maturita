<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
       
<tiles-definitions>
	<definition name="index-layout" template="/WEB-INF/layout/index-layout.jsp" />
	
	<definition name="index" template="/WEB-INF/layout/index-layout.jsp">
		<put-attribute name="title" value="Fugiczek Personal WebSite" />
		<put-attribute name="body" value="/WEB-INF/jsp/index.jsp" />
		<put-attribute name="current" value="index" />
	</definition>
	
	<definition name="index-error" extends="index-layout">
		<put-attribute name="title" value="Error occurred" />
		<put-attribute name="body" value="/WEB-INF/jsp/index-error.jsp" />
		<put-attribute name="current" value="error" />
	</definition>
	
	<definition name="blog" template="/WEB-INF/layout/blog-layout.jsp">
		<put-attribute name="title" value="Fugiczek Blog" />
		<put-attribute name="body" value="/WEB-INF/jsp/blog.jsp" />
	</definition>
	
	<definition name="blog-post" extends="blog">
		<put-attribute name="body" value="/WEB-INF/jsp/blog-post.jsp" />
	</definition>
	
	<definition name="login" template="/WEB-INF/jsp/login.jsp">
		<put-attribute name="title" value="Login" />
	</definition>
	
	<definition name="register" template="/WEB-INF/jsp/register.jsp">
		<put-attribute name="title" value="Register" />
	</definition>
	
	<definition name="admin-layout" template="/WEB-INF/layout/admin-layout.jsp">
			<put-attribute name="title" value="Administration" />
	</definition>
	
	<definition name="admin-users" extends="admin-layout">
		<put-attribute name="body" value="/WEB-INF/jsp/admin-users.jsp" />
		<put-attribute name="current" value="admin-users" />
	</definition>
	
	<definition name="admin-blog" extends="admin-layout">
		<put-attribute name="body" value="/WEB-INF/jsp/admin-blog.jsp" />
		<put-attribute name="current" value="admin-blog" />
	</definition>
